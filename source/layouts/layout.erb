<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= current_page.data.title %></title>
    <meta name="description" content="<%= t("head.description") %>" />
    <meta property="og:title" content="participa.vilanova.cat">
    <meta property="og:description" content="<%= t("head.description") %>">
    <% if I18n.locale == :ca %>
      <meta property="og:locale" content="ca_ES">
      <meta property="og:url" content="http://participa.vilanova.cat/">
    <% else %>
      <meta property="og:locale" content="es_ES">
      <meta property="og:url" content="http://participa.vilanova.cat/es">
    <% end %>
    <meta property="og:type" content="website">
    <meta property="og:image" content="">
    <link rel="alternate" href="/" hreflang="ca">
    <link rel="alternate" href="/es" hreflang="es">
    <link rel="shortcut icon" href="/images/favicon.ico">
    <%= stylesheet_link_tag :application %>
    <%= javascript_include_tag  :head %>
    <%= javascript_include_tag :analytics if config[:environment] == 'production' %>
  </head>
  <body class="<%= page_classes %>">
    <%= yield %>
    <%= javascript_include_tag  :body %>
    <%= javascript_include_tag  :marker %>
    <%= javascript_include_tag  :map %>
  </body>
</html>
